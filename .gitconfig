[color]
    ui = true
    branch = auto
    diff = auto
    status = auto
    interactive = auto

[core]
    editor = vim
    excludesfile = ~/.gitignore_global

[remote "origin"]
    push = HEAD

[user]
    name = Aman Thakral

[merge]
	tool = meld

[mergetool "diffmerge"]
    cmd = /usr/local/bin/dmerge "$PWD/$LOCAL" "$PWD/$BASE" "$PWD/$REMOTE" "$PWD/$MERGED" 
    trustExitCode = false
    keepBackup = true

[alias]
    st = status
    ci =  commit
    br = branch
    co = checkout
    df = diff
    lg = log -p
    rb = rebase
[diff]
	guitool = meld
